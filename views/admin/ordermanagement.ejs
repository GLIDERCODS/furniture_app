<%-include("../admin/leyouts/header.ejs")%>
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Order Management</h4>
                            <p class="card-description"> All order details 
                            </p>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th> No. </th>
                                            <th> Date</th>
                                            <th> Total Amount </th>
                                            <th> Payment Method </th>
                                            <th> Status </th>
                                            <th> Return Requests </th>
                                            <th> View More </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if(orderData != undefined){
                                            orderData.forEach((order,index)=>{ %>
                                        <tr>
                                            <td> <%= index + 1 %></td>
                                            <td> <%= order.date.toLocaleDateString('en-US', { year:'numeric', month: 'short', day: '2-digit'}).replace(/\//g, '-') %> </td>
                                            <td> â‚¹<%= order.totalAmount %> </td>
                                            <td> <%= order.paymentMethod %> </td>
                                            <td> <%= order.products[index].status %> </td>
                                            <td> ........ </td>
                                            <td> <a href="/admin/orderdetailspage?id=<%=order.uniqueId%>">Details</a></td>
                                        </tr>
                                        <% })}else{ %>
                                            <tr>
                                                <td colspan="6">No orders available.</td>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <%-include("../admin/leyouts/footer.ejs")%>