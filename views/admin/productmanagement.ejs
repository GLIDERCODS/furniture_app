<%-include("../admin/leyouts/header.ejs")%>

        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="row">
              <div class="col-lg-6 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Product Management</h4>
                    <p class="card-description"> All Furni Hub Products</p>
                    <p><a href="/admin/loadaddproduct" class="badge badge-success"> + Add Product </a></p>
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>No.</th>
          
                            <th>Name</th>
                            <th>Images</th>
                            <th>Category</th>
                            <th>Stock</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Block</th>
                            <th>Edit</th>
                            <th>Delete</th>
                          </tr>
                        </thead>
                        <tbody>
                            <% if(productData.length>0){
                                for(let i=0;i<productData.length;i++){  %>
                              <tr>
                                <td><%= i+1 %></td>
                                
                                <td><%= productData[i].name %></td>
                                <td>
                                  <img src="/products/images/<%= productData[i].images.image1 %>" alt="">
                                </td>
                                <td><%= productData[i].category %></td>
                                <td><%= productData[i].quantity %></td>
                                <td><%= productData[i].price %></td>
                                <%  if(productData[i].blocked==0){ %>
                                <td class="text-success">Active</td>
                                <td><a href="/admin/block-product?id=<%= productData[i]._id %>" class="badge badge-danger" >Block</a></td>
                               <% }else{ %>
                                <td class="text-danger">Blocked</td>
                                <td><a href="/admin/block-product?id=<%= productData[i]._id %>" class="badge badge-success" >Unblock</a></td>
                              <% } %>
                                <td><a href="/admin/edit-product-page?id=<%= productData [i]._id %>" class="badge badge-warning">Update</a></td>
                                
                                <td><a href="/admin/delete-product?id=<%= productData [i]._id %>"><button class="btn-inverse-danger">Delete</button></a></td>
                              </tr>
                              <% } %>
                              <% }else{ %>
                                <tr>
                                    <td colspan="5">Products Not Found</td>
                                  </tr>
                             <% } %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
     
        <%-include("../admin/leyouts/footer.ejs")%>