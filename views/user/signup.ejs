<%- include("../user/leyouts/header.ejs")%>
<div id="log-img">
  <dive id="form-box-2">
    <form method="post" action="/register">
      <h2 id="sign-up">SIGN UP</h2>
      <div class="mb-3" id="fnbox-1">
        <label for="exampleInputName1" class="form-label" style="font-family: system-ui">Full Name</label>
        <input  type="text" name="name" class="form-control" id="exampleInputName1" style="
              border-radius: 20px;
              border-radius: 20px;
              border-color: #ffffff;
              background-color: #ffffff;
            " required />
      </div>
      <div class="mb-3" id="ebox-2">
        <label for="exampleInputEmail1" class="form-label" style="font-family: system-ui">Email Address</label>
        <input  type="email" name="email" class="form-control" id="exampleInputEmail1" style="
              border-radius: 20px;
              border-radius: 20px;
              border-color: #ffffff;
              background-color: #ffffff;
            " required />
      </div>
      <div class="mb-3" id="phbox-1">
        <label for="exampleInputPhone1" class="form-label" style="font-family: system-ui">Phone No</label>
        <input  type="text" name="phone" class="form-control" id="exampleInputPhone1" style="
              border-radius: 20px;
              border-radius: 20px;
              border-color: #ffffff;
              background-color: #ffffff;
            " required />
      </div>
      <div class="mb-3" id="pbox-2">
        <label for="exampleInputPassword1" class="form-label" style="font-family: system-ui">Password</label>
        <input  type="password" name="password" class="form-control" id="exampleInputPassword1" style="
              border-radius: 20px;
              border-radius: 20px;
              border-color: #ffffff;
              background-color: #ffffff;
            " required " />
      </div>
      <div class="mb-3" id="cpbox-1">
        <label for="exampleInputPassword1" class="form-label" style="font-family: system-ui">Confirm Password</label>
        <input name="confirmPassword" type="password" class="form-control" id="exampleInputCpassword1" style="
              border-radius: 20px;
              border-radius: 20px;
              border-color: #ffffff;
              background-color: #ffffff;
            " required />
      </div>
      <% if(typeof message !== 'undefined'){ %>
        <h6 class="text-center" style="
        font-family: system-ui;
        color: rgb(117 35 35);
        position: absolute;
        left: 145px;
        bottom: 105px;
        font-size: small;
      "> <%= message %> </h6> 
      <% } %>
      <button type="submit" class="btn btn-primary" id="sign-btn-1">
        Register
      </button>
      <p id="paracontent-2">
        Already have an account ? <a id="login" href="/login">Log in</a>
      </p>
    </form>
  </dive>
</div>

<body>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
  crossorigin="anonymous"></script>
</body>

</html>