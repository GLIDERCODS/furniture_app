<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Form</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background: url('/user/images/login/vecteezy_livingroom-interior-with-green-sofa-and-clear-room_22378763_386.jpg'); /* Replace 'furniture_background.jpg' with your actual image file */
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: flex-end;
            background-position-x: -408px;
        }

        .signup-container {
            background: rgba(255, 255, 255, 0.164); /* Semi-transparent white background for the form container */
            padding: 20px;
            border-radius: 100px;
            box-shadow: 0 0 10px rgba(50, 41, 41, 0.1);
            max-width: 400px;
            width: 100%;
            text-align: center;
            position: absolute;
            left: 1245px;
            top: 85px;
            backdrop-filter: blur(10px);
        }

        input {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 35px;
            font-size: 16px;
        }

        button {
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            box-sizing: border-box;
            background-color: #466869;
            border-color: #466869;

            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

        button:hover {
            background-color: #3c5c5d;
        }

        /* .error-message {
          display: none;
          font-family: system-ui; 
          color: rgb(161 17 17);
          margin-right: 350px;
          font-size: 12px;

        } */
    </style>
</head>
<body>
    <div class="signup-container">
        <h2 style="color: white; font-family: system-ui;font-size:55px;">SIGN UP</h2>
        <form id="signup-form" method="post" action="/register" style="width: 345px; position: relative; left: 30px;bottom: 20px;">
            <input type="text" name="name" id="name" placeholder="Name">
            <div class="error-message" id="name-error" style="  display: none;
            color: rgb(161 17 17);
            font-weight: bold;
            font-size: 12px; "></div>

            <input type="email" name="email" id="email" placeholder="Email">
            <div class="error-message" id="email-error" style="  display: none;
            color: rgb(161 17 17);
            font-weight: bold;
            font-size: 12px; "></div>

            <input type="tel" name="number" id="number" placeholder="Phone">
            <div class="error-message" id="phone-error" style="  display: none;
            color: rgb(161 17 17);
            font-weight: bold;
            font-size: 12px; "></div>

            <input type="password" name="password" id="password" placeholder="Password">
            <div class="error-message" id="password-error" style="  display: none;
            color: rgb(161 17 17);
            font-weight: bold;
            font-size: 12px; "></div>

            <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password">
            <div class="error-message" id="confirm-error" style="  display: none;
            color: rgb(161 17 17);
            font-weight: bold;
            font-size: 12px; "></div>

            <input type="text" name="referralCode" id="referralCode" placeholder="Referral Code (optional)">
            <div class="error-message" id="referral-error" style="  display: none;
            color: rgb(161 17 17);
            font-weight: bold;
            font-size: 12px; "></div>

            <button type="submit" id="sign-btn-1">Sign Up</button>
        </form>

        <p style="color: #1e3936; margin-top: 10px;">Already have an account? <a style="text-decoration: none; color: white;" href="/login">Login</a></p>
    </div>

    <script>

      const inputs = document.querySelectorAll('input')

      const name_message = document.getElementById('name-error');
      const email_message = document.getElementById('email-error');
      const phone_message = document.getElementById('phone-error');
      const password_message = document.getElementById('password-error');
      const confirm_message = document.getElementById('confirm-error');
      const err_message = document.getElementById("error-message"); 
      const ref_message = document.getElementById('referral-error');     
      inputs.forEach(input=>{
        input.addEventListener('input',function(){
          name_message.textContent = ""
          email_message.textContent = ""
          phone_message.textContent = ""
          password_message.textContent = ""
          confirm_message.textContent = ""
          err_message.textContent = ""
          ref_message.textContent = ""
        })
      })
      
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="/user/signupvalidation.js"></script>

</body>
</html>





