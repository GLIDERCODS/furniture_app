<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>
    <link rel="stylesheet" href="/user/stylesheets/otpStyle.css">
</head>

<body>
    <div class="container">
    <form method="post" action="/verifyOtp">
        <h2>OTP Verification</h2>

        <% if(typeof message !== 'undefined'){ %>
        <div id="error-message" class="error-message"> <%= message %> </div>
        <% } %>

        <div class="form-group">
            <label for="otp">Enter OTP:</label>
            <input name="otp" type="text" id="otp" class="form-control" placeholder="Enter your OTP">
        </div>
        <button onclick="verifyOTP()" type="submit" class="btn">Verify OTP</button>
        
    </form>
    </div>

    <script>

        function validate() {
          const otp = document.getElementById("otp").value;
          if (otp == "") {
            document.getElementById("er1").innerText = "Must fillout this field";
          }
        }

      </script>
</body>

</html>