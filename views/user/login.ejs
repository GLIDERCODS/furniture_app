 <%- include("../user/leyouts/header.ejs")%>
  <div id="log-img">
    <dive id="form-box">

      <form method="post" action="/login">
        <h2 id="log-in">LOG IN</h2>
        <div class="mb-3" id="ebox-1">
          <label for="exampleInputEmail1" class="form-label" style="font-family: system-ui">Email address</label>
          <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" style="
                border-radius: 20px;
                border-radius: 20px;
                border-color: #ffffff;
                background-color: #ffffff;
              " required />
          <div id="emailHelp" class="form-text" style="font-family: system-ui; color: #1e3936">
            We'll never share your email with anyone else.
          </div>
        </div>
        <div class="mb-3" id="pbox-1">
          <label for="exampleInputPassword1" class="form-label" style="font-family: system-ui">Password</label>
          <input type="password" name="password" class="form-control" id="exampleInputPassword1" style="
                border-radius: 20px;
                border-radius: 20px;
                border-color: #ffffff;
                background-color: #ffffff;
              " required />
        </div>
        <% if(typeof message !== 'undefined'){ %>
              <h6 class="text-center" style="
              font-family: system-ui;
              color: rgb(117 35 35);
              position: absolute;
              left: 165px;
              bottom: 145px;
              font-size: small;
            "> <%= message %> </h6> 
            <% } %>
        <button type="submit" onclick="validateEmail()" class="btn btn-primary" id="log-btn-1">
          Submit
        </button>
        <p id="paracontent">
          Don't have an account ? <a id="signup" href="/signup">Register</a>
        </p>
        <p id="forget">
          <a href="/forgetpage" style="color: #fff; text-decoration: none">Forget Password ?</a>
        </p>
      </form>
    </dive>
  </div>

  <body>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
</body>

</html>